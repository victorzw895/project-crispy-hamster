<h1><%= @user.name %></h1>

<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :tag_line %>
    <%= f.text_field :tag_line, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :industries %>
    <%= f.collection_check_boxes :industry_ids, Industry.all, :id, :name do |b| %>
    <div class="collection-check-box" multiple>
      <%= b.check_box %>
      <%= b.label %>
    </div>
    <% end %>
     <!-- Industry.pluck(:name, :id), :include_blank => true, :class => "form-control"  -->
  </div>
  <div class="form-group">
    <%= f.label :logo_image %>
    <%= f.text_field :logo_image, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :banner_image %>
    <%= f.text_field :banner_image, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :more %>
    <%= f.text_field :more, :class => "form-control" %>
  </div>

  <%= f.submit "Update", :class => "btn btn-primary" %>
<% end %>
